<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity" android:background="@color/background">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0.5">
            <TextView
                    android:text="Moscow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/city"
                    android:textSize="24sp"
                    android:textColor="@color/text" app:fontFamily="@font/montserrat_bold"
                    android:paddingLeft="25dp" android:layout_weight="0.5"/>
            <TextView
                    android:text="14 October, Thursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/date"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:textColor="@color/text" app:fontFamily="@font/montserrat"
                    android:layout_weight="0.5"/>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_combined_shapecloudy"
                android:id="@+id/imageView"
                android:layout_weight="0.5" android:layout_gravity="center"/>
        <TextView
                android:text="+27Â°"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/degree"
                android:textColor="@color/text"
                android:textSize="60dp" app:fontFamily="@font/montserrat_bold"
                android:layout_weight="0.5"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout" app:layout_constraintBottom_toTopOf="@+id/line"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp" android:layout_marginEnd="10dp" android:id="@+id/frameLayout"
    >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="20dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="0.7">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="0.5"
                >
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="0.5">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        app:srcCompat="@drawable/ic_group_1438precipitation"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginStart="10dp" android:layout_marginRight="10dp"
                                        android:layout_marginEnd="10dp"/>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="16dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:text="@string/precipitati"
                                        android:textAppearance="@style/text_top"
                                        android:gravity="top|left"
                                />
                                <TextView
                                        android:id="@+id/precipitation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="16dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:text="21%"
                                        android:textAppearance="@style/text_top_values"
                                        android:gravity="top|left"
                                        android:layout_weight="0.5"
                                        android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                                        android:layout_marginRight="10dp" android:layout_marginEnd="10dp"/>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="0.5">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp" app:srcCompat="@drawable/ic_group_1440humidity"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginStart="10dp" android:layout_marginRight="10dp"
                                        android:layout_marginEnd="10dp"/>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="16dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:text="@string/Humidity"
                                        android:textAppearance="@style/text_top"
                                        android:gravity="top|left"
                                />
                                <TextView
                                        android:id="@+id/humidity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="16dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:text="59%"
                                        android:textAppearance="@style/text_top_values"
                                        android:gravity="top|left"
                                        android:layout_weight="0.5"
                                        android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                                        android:layout_marginRight="10dp" android:layout_marginEnd="10dp"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="0.5"
                >
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="0.5">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp" app:srcCompat="@drawable/ic_group_1439wind"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginStart="10dp" android:layout_marginRight="10dp"
                                        android:layout_marginEnd="10dp"/>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="16dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:text="@string/Wind"
                                        android:textAppearance="@style/text_top"
                                        android:gravity="top|left"
                                />
                                <TextView
                                        android:id="@+id/wind_speed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="16dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:text="21%"
                                        android:textAppearance="@style/text_top_values"
                                        android:gravity="top|left"
                                        android:layout_weight="0.5"
                                        android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                                        android:layout_marginRight="10dp" android:layout_marginEnd="10dp"/>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="0.5">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp" app:srcCompat="@drawable/ic_group_1441sunset"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginStart="10dp" android:layout_marginRight="10dp"
                                        android:layout_marginEnd="10dp"/>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="16dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:text="@string/Sunset"
                                        android:textAppearance="@style/text_top"
                                        android:gravity="top|left"
                                />
                                <TextView
                                        android:id="@+id/sunset"
                                        android:layout_width="wrap_content"
                                        android:layout_height="16dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:text="59%"
                                        android:textAppearance="@style/text_top_values"
                                        android:gravity="top|left"
                                        android:layout_weight="0.5"
                                        android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                                        android:layout_marginRight="10dp" android:layout_marginEnd="10dp"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="0.9">
            </LinearLayout>
            <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="0.2"/>
        </LinearLayout>
    </FrameLayout>
    <view android:layout_width="323dp" android:layout_height="1dp"
          class="com.google.android.material.internal.BaselineLayout" android:id="@+id/line"
          android:width="323dp"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintEnd_toEndOf="parent" app:boxBackgroundColor="@color/text"
          android:background="@color/text" android:layout_marginTop="13dp"
          app:layout_constraintTop_toBottomOf="@+id/frameLayout"/>
    <TextView
            android:text="Wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:textColor="@color/text"
            android:textSize="13sp" android:alpha="0.54" app:fontFamily="@font/montserrat"
            tools:layout_editor_absoluteY="445dp"/>
    <TextView
            android:text="winds g speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wind_gusts_speed"
            android:textColor="@color/text" app:layout_constraintTop_toBottomOf="@+id/line"
            android:layout_marginTop="24dp" android:textSize="15sp" app:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp"/>
    <TextView
            android:text="Wind gusts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="13sp" android:alpha="0.54" app:fontFamily="@font/montserrat"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp" tools:layout_editor_absoluteY="445dp"/>
    <TextView
            android:text="Clouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/clouds"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:textColor="@color/text"
            android:textSize="15sp" app:fontFamily="@font/montserrat_bold" tools:layout_editor_absoluteY="470dp"/>
    <TextView
            android:text="Cloudiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:textColor="@color/text"
            android:textSize="13sp" android:alpha="0.54"
            app:layout_constraintTop_toBottomOf="@+id/clouds" android:id="@+id/textView7"
            app:fontFamily="@font/montserrat"/>
    <TextView
            android:text="Sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sunrise"
            android:textColor="@color/text"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp" app:fontFamily="@font/montserrat_bold"/>
    <TextView
            android:text="Sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="13sp" android:alpha="0.54"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" app:layout_constraintTop_toBottomOf="@+id/sunrise"
            app:fontFamily="@font/montserrat"/>
    <TextView
            android:text="Sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sunset"
            android:textColor="@color/text"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="10dp"
            app:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp"/>
    <TextView
            android:text="Sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="13sp" android:alpha="0.54"
            app:layout_constraintTop_toBottomOf="@+id/sunset" app:fontFamily="@font/montserrat"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>