<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/layout_second"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@color/background">
        <TextView
                android:text="Place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/placeName" android:layout_weight="1"
                android:shadowColor="@color/text" android:padding="20dp" android:gravity="center"
                android:textSize="22sp" android:textColor="@color/text" app:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>
    <LinearLayout
            android:background="@color/background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
                android:textColor="@color/text" app:fontFamily="@font/montserrat" android:textSize="9sp"
                android:paddingLeft="15dp"/>
        <TextView
                android:text="Weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                android:textColor="@color/text" app:fontFamily="@font/montserrat" android:textSize="9sp"
                android:paddingLeft="10dp"/>
        <TextView
                android:text="Temp (Min temp)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                android:textColor="@color/text" app:fontFamily="@font/montserrat" android:textSize="9sp"
                android:paddingLeft="10dp"/>
        <TextView
                android:text="Rain (Snow) mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                android:textColor="@color/text" app:fontFamily="@font/montserrat" android:textSize="9sp"
                android:paddingLeft="10dp"/>
        <TextView
                android:text="Wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                android:textColor="@color/text" app:fontFamily="@font/montserrat" android:textSize="9sp"
                android:paddingLeft="10dp"/>
    </LinearLayout>
    <ListView
            android:id="@+id/simpleListView"
            android:background="@color/background"
            android:layout_width="fill_parent"
            android:layout_height="689dp"
            android:divider="@color/material_blue_grey_800"
            android:dividerHeight="1dp"/>
</LinearLayout>